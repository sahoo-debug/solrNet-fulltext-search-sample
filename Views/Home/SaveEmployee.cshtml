@model SolrNetSample.Models.EmployeeModel
@{
    string pageheader = "Save Employee Detail";
    if(Model.Id != null)
    {
        pageheader = "Update Employee Detail";
    }
}
    <div class="form-group row">
        <div class="col-sm-12" id="msg" style="display:none">
            <strong><span id="msgbody"></span></strong>
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <h1 class="display-4">@pageheader</h1>
        </div>
    </div>
        <form id="frmsaveemployee" asp-controller="Home" asp-action="CommitEmployee" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group row">
                <label for="firstName" class="col-sm-2 col-form-label">First Name</label>
                <div class="col-sm-5">
                    <input asp-for="FirstName" class="form-control" id="firstName" placeholder="First Name">
                    <input type="hidden" asp-for="Id" />
                </div>
                <div class="col-sm-3">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="lastName" class="col-sm-2 col-form-label">Last Name</label>
                <div class="col-sm-5">
                    <input asp-for="LastName" class="form-control" id="lastName" placeholder="last Name">
                </div>
                <div class="col-sm-3">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="address" class="col-sm-2 col-form-label">Address</label>
                <div class="col-sm-5">
                    <input asp-for="Address" class="form-control" id="address" placeholder="Address">
                </div>
                <div class="col-sm-3">
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="salary" class="col-sm-2 col-form-label">Salary</label>
                <div class="col-sm-5">
                    <input asp-for="Salary" class="form-control" id="salary" placeholder="Salary">
                </div>
                <div class="col-sm-3">
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="department" class="col-sm-2 col-form-label">Department</label>
                <div class="col-sm-5">
                    <input asp-for="Department" class="form-control" id="department" placeholder="Department">
                </div>
                <div class="col-sm-3">
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2"></div>
                <div class="col-sm-1">
                    <input type="submit" class="btn btn-info" id="btnSave" value="Submit" />
                </div>
                <div class="col-sm-3">
                    <button class="btn btn-primary" id="btnCancel" onclick="window.location='/';return false;">Cancel</button>
                </div>
            </div>
        </form>
