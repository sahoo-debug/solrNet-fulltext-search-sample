@model IList<SolrNetSample.Models.EmployeeModel>

<div class="text-center">
    <h1 class="display-4">Employee master list</h1>   
</div>
<div id="msg" style="display:none">
    <strong><span id="msgbody"></span></strong>
    <button type="button" class="close" data-dismiss="alert">&times;</button>
</div>
<div>
    <button id="btnAddemployeedetail" class="btn btn-info">Add Employee</button>
</div><br />
 <div class="input-group">
          <input type="text" id="txtempsearch" class="form-control" placeholder="Search employees...">
          <div class="input-group-append">
              <button id="btnempsearch" class="btn btn-secondary" type="button">
                  Search
              </button>
          </div>
 </div><br />
       <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
           <thead>
               <tr>
                   <th class="th-sm">
                       First Name
                   </th>
                   <th class="th-sm">
                       Last Name
                   </th>
                   <th class="th-sm">
                       Address
                   </th>
                   <th class="th-sm">
                       Salary
                   </th>
                   <th class="th-sm">
                       Department
                   </th>
                   <th class="th-sm">
                       Action
                   </th>
               </tr>
           </thead>
           @*....load search employee data....*@
       <tbody id="empsearchresult">
           @{await Html.RenderPartialAsync("~/Views/Partial/_SearchEmployeePartial.cshtml", Model);}
       </tbody>    
       </table>
