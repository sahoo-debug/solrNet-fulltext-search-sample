@model IList<SolrNetSample.Models.EmployeeModel>
@foreach (var item in Model)
{
    <tr>
        <td>@item.FirstName</td>
        <td>@item.LastName</td>
        <td>@item.Address</td>
        <td>@item.Salary</td>
        <td>@item.Department</td>
        <td>
            <a asp-controller="Home" asp-action="SaveEmployee" asp-route-id="@item.Id" class="btn btn-info btn-rounded btn-sm my-0">Edit</a>
            <span class="table-remove">
                <button type="button" onclick="removeItem('@item.Id')" class="btn btn-danger btn-rounded btn-sm my-0">
                    Remove
                </button>
            </span>
        </td>
    </tr>
}